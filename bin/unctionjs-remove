#!/usr/bin/env ruby

require_relative "../source/unctionjs"

include Unctionjs::Context::Regular

Unctionjs.command do |let|
  let.array "--paths", "the list of files", required: true
end

with do |name|
  `cd ../#{name} && git rm #{Unctionjs.options["paths"].join(" ")}; rm -r #{Unctionjs.options["paths"].join(" ")}`
end
