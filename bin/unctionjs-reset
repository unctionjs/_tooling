#!/usr/bin/env ruby

require "pry"
require "slop"
require_relative "../source/unctionjs"

include Unctionjs::Context::Package

puts "Running #{__FILE__}"

options = Slop.parse do |let|
  let.array "--paths", "the list of files", required: true
end

with do |name|
  `cd ../#{name} && git reset HEAD #{options["paths"].join(" ")}`
end
