#!/usr/bin/env ruby

require_relative "../source/tooling"

include Tooling::Context::Active

Tooling.command

with(concurrent: true) do |name|
  next if name == "_tempLate"

  original = File.read(File.join("..", name, "test.js"))
  rewritten = original
    .gsub(%(/* eslint-disable flowtype/require-return-type */), %())
    .gsub(%(from "./index"), %(from "./"))
  File.write(File.join("..", name, "test.js"), rewritten)
end
