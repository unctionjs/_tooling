#!/usr/bin/env ruby

require_relative "../source/unctionjs"

include Unctionjs::Context::Regular

Unctionjs.command

with(concurrent: false) do |name|
  if name != "_tempLate" && different_version_from_published?(name) && ci_passes?(name)
    puts "Publishing #{name}..."

    `cd ../#{name} && npm publish`
  end
end
