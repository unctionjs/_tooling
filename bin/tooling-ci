#!/usr/bin/env ruby

require_relative "../source/tooling"

include Tooling::Context::Active

Tooling.command

with(concurrent: false) do |name|
  unless name == "_tempLate"
    system("cd ../#{name} && npm run typecheck 2>&1")
    system("cd ../#{name} && npm run test 2>&1")
    system("cd ../#{name} && npm run lint 2>&1")
  end
end
