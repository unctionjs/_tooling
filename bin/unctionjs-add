#!/usr/bin/env ruby
require_relative "../source/unctionjs"

include Unctionjs::Context::Regular

Unctionjs.command("adds files to git") do |let|
  let.array "--files", "the list of files (filea,fileb)", required: true
end

with do |name|
  `cd ../#{name} && git add #{Unctionjs.options["paths"].join(" ")}`
end
