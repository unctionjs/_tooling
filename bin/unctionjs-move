#!/usr/bin/env ruby

require_relative "../source/unctionjs"

include Unctionjs::Context::Regular

Unctionjs.command do |let|
  let.string "--from", "The origin", required: true
  let.string "--to", "The destination", required: true
end

with do |name|
  `cd ../#{name} && git mv #{Unctionjs.options["from"]} #{Unctionjs.options["to"]}; mv #{Unctionjs.options["from"]} #{Unctionjs.options["to"]}`
end
